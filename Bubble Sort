def bubble_sort(arr):
    n = len(arr)
    for i in range(n):
        swapped = False
        for j in range(n-i-1):
            if arr[j]>arr[j+1]:
                arr[j], arr[j+1] = arr[j+1], arr[j]
                swapped = True
                
        if swapped==False:
            break
arr = [4,3,2,1]
sorted_arr = bubble_sort(arr)
print(sorted_arr)
